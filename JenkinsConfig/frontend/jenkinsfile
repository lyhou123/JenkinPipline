pipeline {
    agent any
    parameters {
        choice(name: "branch", choices: ["production", "staging", "development"], description: "Sample multi-choice parameter")
        text(name: "expose_port", defaultValue: "8088", description: "for expose port")
    }
    stages {
        stage('Hello') {
            steps {
                script {
                    if (params.branch == 'production') {
                        echo 'Hello Production'
                        git branch: 'main', url: 'https://github.com/lyhou123/JenkinPipline.git'
                    } else if (params.branch == 'staging') {
                        git branch: 'lyhou', url: 'https://github.com/lyhou123/JenkinPipline.git'
                    }
                }
            }
        }
           stage('build with dockerfile'){
            steps{
                sh 'docker build -t reactwithchoice:${BUILD_NUMBER} -f react-dockerfile .'
            }
        }
        stage('deploy'){
            steps{
                sh 'docker run -d -p ${params.expose_port}:80 reactwithchoice:${BUILD_NUMBER} '
            }
        }
    }
}
